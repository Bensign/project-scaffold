source 'http://rubygems.org'

# Dat stylesheet framework
gem "compass"

# Dat HTML generator
gem "haml"

# Dat Web-Server
gem "thin"

# Dat micro-framework
gem "sinatra"

# Rails-like helpers for sinatra.  Includes things like content for.
gem "sinatra-contrib"

# Our basic driver to Mongo...
gem "mongo"

# ...and a suggested library to speed things up.
gem "bson_ext"

# Allows us to have logic like "Time.now - 1.week.ago"
gem "activesupport"

# Dem Rake Tasks
gem "rake"